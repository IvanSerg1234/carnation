generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id         Int      @id @default(autoincrement())
  name       String
  price      Float
  image      String
  images     String[]
  categories String[]
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
}

model Order {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  products  Json
  total     Float
  createdAt DateTime @default(now())
}